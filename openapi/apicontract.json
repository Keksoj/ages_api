{
    "openapi": "3.0.0",
    "info": {
        "title": "Ages API",
        "description": "A REST-ish CRUD API to store some names and birthdates",
        "version": "0.1.0"
    },
    "servers": [
        {
            "url": "0.0.0.0:8080",
            "description": "The dev's lair"
        }
    ],
    "paths": {
        "/auth/signup": {
            "post": {
                "summary": "Register a new user in the database",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Returns a success message",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "$ref": "#/components/schemas/TextResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "summary": "Log a user to receive a JWT",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Returns a json web token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/securitySchemes/bearerAuth"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/update": {
            "put": {
                "summary": "Change the user's credentials, most probably the password. Need a JWT.",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Returns a success message",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "$ref": "#/components/schemas/TextResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/delete": {
            "delete": {
                "summary": "Delete the user AND ALL THE ASSOCIATED DATA. Need a JWT only.",
                "responses": {
                    "200": {
                        "description": "Returns a success message",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "$ref": "#/components/schemas/TextResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/persons": {
            "get": {
                "summary": "Return the list of all registered persons",
                "security": [
                    {
                        "something_to_write_here": [
                            "#/components/securityScheme/bearerAuth"
                        ]
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A JSON array of persons",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/FullPerson"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Post a Person to add to the user's family",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Person"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Returns the registered person",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FullPerson"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update a registered person",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/FullPerson"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Returns the updated person",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FullPerson"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/persons/{id}": {
            "get": {
                "summary": "Return one registered person",
                "responses": {
                    "200": {
                        "description": "A person",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FullPerson"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete the registered person",
                "responses": {
                    "200": {
                        "description": "A success message",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "$ref": "#/components/schemas/TextResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/ping": {
            "get": {
                "summary": "Ping the API",
                "responses": {
                    "200": {
                        "description": "A pong message",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "$ref": "#/components/schemas/TextResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/documentation": {
            "get": {
                "summary": "Get the OpenAPI contract",
                "responses": {
                    "200": {
                        "description": "The JSON OpenAPI contract",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Identifier": {
                "title": "Identifier",
                "type": "integer",
                "example": 5,
                "description": "An id attributed by the database"
            },
            "Person": {
                "title": "Person",
                "description": "A member of the user's family, with birthdate in POSIX seconds",
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Oncle Jim"
                    },
                    "birthdate": {
                        "type": "integer",
                        "example": -447399150
                    }
                }
            },
            "FullPerson": {
                "title": "FullPerson",
                "description": "A full Person object, with id",
                "allOf": [
                    { "$ref": "#/components/schemas/Person" },
                    { "$ref": "#/components/schemas/Identifier" }
                ]
            },
            "User": {
                "title": "User",
                "description": "A user as provided by the client for signup, login and update",
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "password": {
                        "type": "string",
                        "example": "my_awesome_password"
                    }
                }
            }
        }
    }
}
